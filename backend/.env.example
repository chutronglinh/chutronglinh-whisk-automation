# ============================================
# APPLICATION SETTINGS
# ============================================
NODE_ENV=production
PORT=3000

# ============================================
# DATABASE
# ============================================
MONGODB_URI=mongodb://localhost:27017/whisk-automation

# ============================================
# REDIS
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# FILE PATHS
# ============================================
# Chrome profiles storage
PROFILE_PATH=/opt/whisk-automation/data/profiles

# CSV imports and temporary uploads
UPLOAD_PATH=/opt/whisk-automation/data/uploads

# Generated images output
OUTPUT_PATH=/opt/whisk-automation/data/output/images

# ============================================
# DISPLAY & BROWSER
# ============================================
# X Display for Chrome
# Use :0 if you have desktop environment
# Use :99 if using Xvfb virtual display
DISPLAY=:0

# Chrome executable path
# Ubuntu/Debian: /usr/bin/google-chrome
# Alternative: /usr/bin/chromium-browser
CHROME_PATH=/usr/bin/google-chrome

# ============================================
# IMAGE GENERATION DEFAULTS
# ============================================
# Image model options:
# - IMAGEN_3
# - IMAGEN_3_5 (recommended)
IMAGE_MODEL=IMAGEN_3_5

# Aspect ratio options:
# - IMAGE_ASPECT_RATIO_LANDSCAPE
# - IMAGE_ASPECT_RATIO_PORTRAIT
# - IMAGE_ASPECT_RATIO_SQUARE
DEFAULT_ASPECT_RATIO=IMAGE_ASPECT_RATIO_LANDSCAPE

# Media category options:
# - MEDIA_CATEGORY_BOARD (recommended for AI-generated images)
# - MEDIA_CATEGORY_PHOTO
MEDIA_CATEGORY=MEDIA_CATEGORY_BOARD

# Default seed for reproducible results
# Leave empty for random generation
DEFAULT_SEED=

# ============================================
# API ENDPOINTS (DO NOT CHANGE UNLESS GOOGLE UPDATES)
# ============================================
WHISK_SESSION_API=https://labs.google/fx/api/auth/session
WHISK_CREATE_PROJECT_API=https://labs.google/fx/api/trpc/media.createOrUpdateWorkflow
WHISK_GENERATE_IMAGE_API=https://aisandbox-pa.googleapis.com/v1/whisk:generateImage
WHISK_URL=https://labs.google/fx/tools/whisk

# ============================================
# WORKER SETTINGS
# ============================================
# Max concurrent jobs per worker instance
IMAGE_GENERATION_CONCURRENCY=1

# Job timeout in milliseconds (2 minutes default)
IMAGE_GENERATION_TIMEOUT=120000

# Number of retry attempts for failed jobs
JOB_ATTEMPTS=3

# Backoff delay between retries (milliseconds)
JOB_BACKOFF_DELAY=5000

# ============================================
# LOGGING
# ============================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable detailed API request/response logs
API_DEBUG=false