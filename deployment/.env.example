# Whisk Automation - Environment Configuration
# Copy to backend/.env and fill in your values

# Node Environment
NODE_ENV=production

# Server
PORT=3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/whisk-automation

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Paths
PROFILE_PATH=/opt/whisk-automation/data/profiles
OUTPUT_PATH=/opt/whisk-automation/data/output

# Display (for Chrome)
DISPLAY=:0

# Logging
LOG_LEVEL=info